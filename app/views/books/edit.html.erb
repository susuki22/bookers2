<main>
  <p id="notice"><%= flash[:notice] %></p>
  <% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this obj from being saved:
    <% @book.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  	  	<h1>Editing Book</h1>
  		  <%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
  		    <div class="d-flex flex-column bd-highlight mb-3">
            <div class="form-group">
              <label for="book_title">Title</label>
              <%= f.text_field :title, class:"form-control", placeholder:"" %>
            </div>
            <div class="form-group">
              <label for="book_opinion">Opinion</label>
              <%= f.text_area :body, class:"form-control", rows:"3", placeholder:"" %>
            </div>
            <div class="form-group">
              <%= f.submit 'Update Book', class:"btn btn-success" %>
            </div>
          </div>
        <% end %>
  		  <%= link_to "Show", book_path(@book) %> |
  		  <%= link_to "Back", books_path %>
      </div>
    </div>
  </div>
</main>