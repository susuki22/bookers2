<main>
  <p id="notice">You have created book successfully.</p>
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, size: "100x100", format: 'jpeg', fallback: "no_image.jpg" %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
	            <th>name</th>
	            <th><%= @user.name %></th>
            </tr>
            <tr>
	            <th>introduction</th>
	            <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
        <%= link_to "", edit_user_path(@user), class:'btn btn-outline-secondary btn-block fas fa-user-cog edit_user_31562' %>
        </div>
        <h2 class="mt-3">New book</h2>
        <%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
          <input name="utf8" type="hidden" value="✓">
          <input type="hidden" name="authenticity_token" value="9vCV1BYRvKmaaiT8r6uWR16MikxcSbr/eprMljZpoihYGpus8EGnnHDVorBAq3RaZ4kwEbBi+WxMewP8vFut2g==">
          <div class="form-group">
            <label for="book_title">Title</label>
            <input class="form-control book_title" type="text" name="book[title]" id="book_title">
          </div>
          <div class="form-group">
            <label for="book_opinion">Opinion</label>
            <textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>
          </div>
          <div class="form-group">
            <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
          </div>
        <% end %>
      </div>
      <div class="col-md-8 offset-md-1">
  		  <h2>Book detail</h2>
  		  <table class="table">
  		    <tbody>
  		      <tr>
              <td>
                <a href="/users/32640">
                  <img class="attachment user profile_image fallback" src="/assets/no-image-icon-d3f9e11cb2bb284b42e0810f94b03c50126f51f482ea43054b87c2b7ebaa01d5.jpg"><br>
                  qwe
                </a>
              </td>
              <td><%= link_to @book.title, book_path(@book.id) %></td>
              <td><%= @book.body %></td>
              <td><%= link_to "Edit", edit_book_path(@book), class:'btn btn-sm btn-success edit_book_26052' %></td>
              <td><%= link_to "Destroy", book_path(@book.id), class:'btn btn-sm btn-danger destroy_book_26052',  method: :delete, "data-confirm" => "本当に消しますか?" %></td
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>