<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= attachment_image_tag @user, :profile_image, size: "100x100", format: 'jpeg', fallback: "no_image.jpg" %>
        <table class="table">
          <tbody>
            <tr></tr>
            <tr>
	            <th>name</th>
	            <th><%= @user.name %></th>
            </tr>
            <tr>
	            <th>introduction</th>
	            <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <%= link_to "", edit_user_path(@user), class:'btn btn-outline-secondary btn-block fas fa-user-cog edit_user_31562' %>
        </div>
        <h2 class="mt-3">New book</h2>
        <%= form_with model:@book, url:"/books", local:true do |f| %>
          <div class="d-flex flex-column bd-highlight mb-3">
            <div class="form-group">
              <label for="book_title">Title</label>
              <%= f.text_field :title, class:"form-control", placeholder:"" %>
            </div>
            <div class="form-group">
              <label for="book_opinion">Opinion</label>
              <%= f.text_area :body, class:"form-control", placeholder:"" %>
            </div>
            <div class="form-group">
              <%= f.submit 'Create Book', class:"btn btn-success" %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="col-md-8 offset-md-1">
        <h2>Users</h2>
        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= attachment_image_tag user, :profile_image, size: "40x40", format: 'jpeg', fallback: "no_image.jpg" %></td>
                <td><%= user.name %></td>
                <td><%= link_to "Show", user_path(user.id) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
</div>
</main>