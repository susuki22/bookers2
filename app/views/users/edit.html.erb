<main>
  <p id="notice"><%= flash[:notice] %></p>
  <% if @user.errors.any? %>
    <%= @user.errors.count %>errors prohibited this obj from being saved:
    <% @user.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
        <%= form_with model:@user, url:"/users/#{@user.id}", local:true do |f| %>
          <div class="d-flex flex-column bd-highlight mb-3">
            <div class="form-group">
              <label for="user_name">Name</label>
              <%= f.text_field :name, class:"form-control", placeholder:"" %>
            </div>
            <div class="form-group">
              <label for="user_image">Image</label>
              <%= f.attachment_field :profile_image, class: "w-100" %>
            </div>
            <div class="form-group">
              <label for="user_introduction">Introduction</label>
              <%= f.text_area :introduction, class:"form-control", rows:"3", placeholder:"" %>
            </div>
            <div class="form-group">
              <%= f.submit 'Update User', class:"btn btn-secondary" %>
            </div>
          </div
        <% end %>
      </div>
    </div>
  </div>
</main>